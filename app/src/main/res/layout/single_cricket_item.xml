<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="6dp">

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="LIVE" />

        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="2nd Test, Sri Lanka tour of South Africa at Port Elizabeth, Feb 21-25 2019" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:padding="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/home_team_logo"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_gravity="start"
                        android:scaleType="fitStart"
                        tools:src="@tools:sample/avatars" />

                    <TextView
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:id="@+id/home_team_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/home_team_logo"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="SL" />
                </LinearLayout>

                <TextView
                    android:textSize="10sp"
                    android:gravity="center"
                    tools:text="Sri Lanka"
                    android:id="@+id/home_team_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/home_team_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_team_logo"
                    android:layout_alignParentEnd="false"
                    android:gravity="center"
                    android:textColor="#333"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="222 128" />

                <TextView
                    android:id="@+id/home_team_target"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(45.4 ov,target 197)"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#EEE" />


            <LinearLayout
                android:padding="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout

                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/away_team_logo"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_gravity="start"
                        android:scaleType="fitStart"
                        tools:src="@tools:sample/avatars" />

                    <TextView
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:id="@+id/away_team_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/away_team_logo"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="SA" />
                </LinearLayout>

                <TextView
                    android:textSize="10sp"
                    android:gravity="center"
                    tools:text="South Africa"
                    android:id="@+id/away_team_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/away_team_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/away_team_logo"
                    android:layout_alignParentEnd="false"
                    android:textSize="18sp"
                    android:textColor="#333"
                    android:textStyle="bold"
                    tools:text="154 197/2" />

                <TextView
                    android:textSize="14sp"
                    android:id="@+id/away_team_target"
                    android:gravity="center"
                    android:text="(45.4 ov,target 197)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            tools:text="Sri Lanka won by 8 wickets" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>