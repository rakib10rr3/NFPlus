<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.rakib.nfplus">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.rakib.nfplus.app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.rakib.nfplus.SeriesPlayerActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity
            android:name="com.rakib.nfplus.NewsActivity"
            android:label="@string/title_activity_news"
            android:theme="@style/NewsTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rakib.nfplus.MainActivity" />
        </activity>
        <activity
            android:name="com.rakib.nfplus.SearchActivity"
            android:theme="@style/SearchTheme" />
        <activity
            android:name="com.rakib.nfplus.SportsActivity"
            android:label="@string/title_activity_sports"
            android:parentActivityName="com.rakib.nfplus.MainActivity"
            android:theme="@style/SportsTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rakib.nfplus.MainActivity" />
        </activity>
        <activity
            android:name="com.rakib.nfplus.LivePlayerActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity
            android:name="com.rakib.nfplus.TVActivity"
            android:label="@string/title_activity_tv"
            android:parentActivityName="com.rakib.nfplus.MainActivity"
            android:theme="@style/TVTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rakib.nfplus.MainActivity" />
        </activity>
        <activity
            android:name="com.rakib.nfplus.MoreSeriesActivity"
            android:label="@string/title_activity_more_series"
            android:theme="@style/MoreSeriesTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rakib.nfplus.SeriesActivity" />
        </activity>
        <activity
            android:name="com.rakib.nfplus.MoreMoviesActivity"
            android:label="@string/title_activity_more_movies"
            android:parentActivityName="com.rakib.nfplus.MoviesActivity"
            android:theme="@style/MoreMoviesTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rakib.nfplus.MoviesActivity" />
        </activity>
        <activity
            android:name="com.rakib.nfplus.SeriesDetailActivity"
            android:label="@string/title_activity_series_detail"
            android:parentActivityName="com.rakib.nfplus.SeriesActivity"
            android:theme="@style/SeriesDetailTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rakib.nfplus.SeriesActivity" />
        </activity>
        <activity
            android:name="com.rakib.nfplus.SeriesActivity"
            android:label="@string/title_activity_series"
            android:parentActivityName="com.rakib.nfplus.MainActivity"
            android:theme="@style/SeriesTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rakib.nfplus.MainActivity" />
        </activity>
        <activity
            android:name="com.rakib.nfplus.ScrollingActivity"
            android:label="@string/title_activity_scrolling" />
        <activity
            android:name="com.rakib.nfplus.MovieDetailActivity"
            android:label="@string/title_activity_movie_detail"
            android:parentActivityName="com.rakib.nfplus.MoviesActivity"
            android:theme="@style/MoviesDetailTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rakib.nfplus.MoviesActivity" />
        </activity>
        <activity
            android:name="com.rakib.nfplus.PlayerActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity
            android:name="com.rakib.nfplus.MoviesActivity"
            android:label="@string/title_activity_movies"
            android:parentActivityName="com.rakib.nfplus.MainActivity"
            android:theme="@style/MoviesTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rakib.nfplus.MainActivity" />
        </activity>
        <activity
            android:name="com.rakib.nfplus.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/LoginTheme" />
        <activity
            android:name="com.rakib.nfplus.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.rakib.nfplus.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>